{
  "name": "remotion-mcp-app",
  "type": "module",
  "version": "1.0.0",
  "description": "MCP App for creating animated Remotion video compositions with a live interactive player. Design videos through conversation with AI.",
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-apps",
    "mcp-use",
    "remotion",
    "video",
    "react",
    "animation"
  ],
